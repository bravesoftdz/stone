<AnularGrupalScreen>:
    canvas.before:
        BorderImage:
            source: 'images/misc/background.png'
            pos: self.pos
            size: self.size
    BoxLayout:
        padding: 40
        orientation: 'vertical'
        LabelU:
            text: 'Anulación de Tickets Grupales'
            valign: 'top'
            font_size: '40sp'
            size_hint: 1, 0.1
            padding: (40, 30)
        BoxLayout:
            size_hint: 1, 0.7
            spacing: 30
            BoxLayout:
                canvas.before:
                    Color:
                        rgba: 0.92, 0.93, 0.94, 0.3
                    Rectangle:
                        # self here refers to the widget i.e BoxLayout
                        pos: self.pos
                        size: self.size
                padding: 20
                spacing: 30
                size_hint: 0.5, 1
                orientation: 'vertical'
                GridLayout:
                    cols: 2
                    rows: 2
                    padding: 60
                    spacing: 15
                    size_hint: 1, 0.5
                    LabelU:
                        text: 'Número'
                    LabelU:
                        text: ''
                    Input:
                        id: id_ticket
                        hint_text: 'Nro ticket'
                    ButtonUanular:
                        text: 'Anular'
                        on_press: root.confirmacion()
                BoxLayout:
                    size_hint: 1, 0.5
            BoxLayout:
                size_hint: 0.5, 1
                AsyncImage:
                    source: 'images/help/ticket_grupal.jpg'
        BoxLayout:
            size_hint: 1, 0.1
        BoxLayout:
            size_hint: 0.2, 0.1
            ButtonU:
                on_press: root.cancel()
                BoxLayout:
                    pos: self.parent.pos
                    size: self.parent.size
                    padding: 20
                    LabelU:
                        text: 'Volver'
                    Image:
                        source: 'images/buttons/back.png'
                        y: self.parent.y + self.parent.height - 150
                        x: self.parent.x + self.parent.width - 70
                        size: 150, 150
                        allow_stretch: True
