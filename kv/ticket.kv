# Pantalla principal
<SplashScreen>:
    canvas.before:
        BorderImage:
            source: 'images/misc/background.png'
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: 'vertical'
        padding: 30
        LabelU:
            text: 'Sistema de Tickets del Comedor Universitario'
            valign: 'top'
            font_size: '60sp'
            size_hint: 1, 0.1
        GridLayout:
            cols:3
            rows:1
            padding: 120
            spacing: 10
            size_hint: 1, 0.6
            ButtonU:
                on_press: root.login()
                BoxLayout:
                    orientation: 'vertical'
                    pos: self.parent.pos
                    size: self.parent.size
                    padding: 40
                    Image:
                        source: 'images/home/entrar.png'
                        y: self.parent.y + self.parent.height - 150
                        x: self.parent.x + self.parent.width - 170
                        size: 100, 100
                        allow_stretch: True
                    LabelU:
                        text: 'Ingresar'
            ButtonU:
                on_press: root.registro()
                BoxLayout:
                    orientation: 'vertical'
                    pos: self.parent.pos
                    size: self.parent.size
                    padding: 40
                    Image:
                        source: 'images/home/registrar.png'
                        y: self.parent.y + self.parent.height - 150
                        x: self.parent.x + self.parent.width - 170
                        size: 100, 100
                        allow_stretch: True
                    LabelU:
                        text: 'Registrarse'
            ButtonU:
                on_press: # root.manager.current = 'ayuda'
                BoxLayout:
                    orientation: 'vertical'
                    pos: self.parent.pos
                    size: self.parent.size
                    padding: 40
                    Image:
                        source: 'images/home/ayuda.png'
                        y: self.parent.y + self.parent.height - 150
                        x: self.parent.x + self.parent.width - 170
                        size: 100, 100
                        allow_stretch: True
                    LabelU:
                        text: 'Ayuda'
        LabelU:
            text: 'Tickets Disponibles en la Semana'
            font_size: '40sp'
            size_hint: 1, 0.1
        BoxLayout:
            canvas.before:
                Color:
                    rgba: 0.92, 0.93, 0.94, 0.3
                Rectangle:
                    # self here refers to the widget i.e BoxLayout
                    pos: self.pos
                    size: self.size
            orientation: 'vertical'
            size_hint: 1, 0.2
            BoxLayout:
                size_hint: 1, 0.1
                LabelU:
                    text: 'Lunes'
                    font_size: '20sp'
                LabelU:
                    text: 'Martes'
                    font_size: '20sp'
                LabelU:
                    text: 'Miercoles'
                    font_size: '20sp'
                LabelU:
                    text: 'Jueves'
                    font_size: '20sp'
                LabelU:
                    text: 'Viernes'
                    font_size: '20sp'
            BoxLayout:
                size_hint: 1, 0.1
                LabelU:
                    id: fecha_lunes
                    text: ''
                    font_size: '20sp'
                LabelU:
                    id: fecha_martes
                    text: ''
                    font_size: '20sp'
                LabelU:
                    id: fecha_miercoles
                    text: ''
                    font_size: '20sp'
                LabelU:
                    id: fecha_jueves
                    text: ''
                    font_size: '20sp'
                LabelU:
                    id: fecha_viernes
                    text: ''
                    font_size: '20sp'
            BoxLayout:
                size_hint: 1, 0.1
            BoxLayout:
                canvas.before:
                    Color:
                        rgba: 0.92, 0.93, 0.94, 0.5
                    Rectangle:
                        # self here refers to the widget i.e BoxLayout
                        pos: self.pos
                        size: self.size
                size_hint: 1, 0.3
                LabelU:
                    id: cant_lunes
                    text: ''
                    font_size: '25sp'
                LabelU:
                    id: cant_martes
                    text: ''
                    font_size: '25sp'
                LabelU:
                    id: cant_miercoles
